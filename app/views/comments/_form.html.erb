<div class="form-block add-comment-form">
<%= form_for @comment, class: "form-horizontal" do |f| %>
 
  <div class="form-group row">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>
  <%= f.hidden_field :photo_id, value: photo.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group move-right col-sm-offset-2">
    <%= f.submit("Добавить комментарий", class: "btn btn-primary") %>
  </div>

<% end %>
</div>
